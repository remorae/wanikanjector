{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch addon",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "addonType": "webExtension",
      "addonPath": "${workspaceFolder}",
      "reloadOnChange": {
        "watch": [
          "${workspaceFolder}/**/*.js",
          "${workspaceFolder}/**/*.html",
          "${workspaceFolder}/**/*.css"
        ]
      }
    }
  ]
}